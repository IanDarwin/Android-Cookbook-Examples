<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Look in Logcat for CryptoDemos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/enc_hash_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_encrypt_hash_demo"
        />
    <Button
        android:id="@+id/enc_prefs_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_encrypted_shared_prefs"

        />
    <Button
        android:id="@+id/enc_file_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_encrypted_read_write"
        />


</LinearLayout>